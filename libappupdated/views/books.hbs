                console.log(this.bookName)
              </script>
              {{/each}} --}}

              {{#each list}}

            <div class="row " style="padding-top: 20px;">
              <div class=" col-6 col-md-3 col-xl-2 text-center" style=" margin-bottom: 20px; ">
                <img
                  src="{{this.image}}"
                  class="img-fluid " alt="Responsive image" style="max-width: 100%; height: 160px;  ">
              </div>
              <div class=" col-md-9 col-xl-10" style="padding-top: 20px;" >
                <h4 style="font-family: Comic Sans MS; ">{{this.bookName}}</h4>
                <div class="row">
                  <div class="col-9">
                    <h5 style="font-size: 2vw"><span class="label label-default ">{{this.authorName}}</span></h5>
                  </div>
                    <a href="{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </div>
              </div>
            </div>
          
            <div style="border: 1px solid rgb(190, 189, 189);">
              {{!-- /employee/delete/{{this._id}} --}}
            </div>
            {{/each}} 
           </div>
        </div>
      </div>
    </div>
  </div>
