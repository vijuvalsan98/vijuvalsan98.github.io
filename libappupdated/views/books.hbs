<body style="background-color: rgb(190, 189, 189);">


  {{!-- navebar --}}
  <nav class="navbar navbar-expand-lg navbar-light  " style="background-color: rgb(245, 98, 98);">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">{{title}}</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

          {{!-- navebar adding --}}

          {{#each nav}}
          <li class="nav-item">
            <a class="nav-link active" href="{{this.link}}">{{this.name}}</a>
          </li>
          {{/each}}

        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  {{!-- bookheading --}}

  <section>

    <div class="container-fluid">

      <div class="row " id="bookh">
        <div class="text-center">
          <p style=" font-size: 5vw;">BOOKS</p>
        </div>

      </div>
    </div>
  </section>

  {{!--// bookheading --}}


  {{!-- books --}}
  <div class="container" style="width: 900px;">
    <div class="row">
      <div class=" col-md-12 ">
        <div class="top-spacer">

          <div class="container">

            
              {{!-- {{#each list}}
